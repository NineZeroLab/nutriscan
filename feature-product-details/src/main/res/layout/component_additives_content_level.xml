<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_additives_risk_level_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_risk_level"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Moderate Risk"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/fl_risk_level_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp">

        <ImageView
            android:id="@+id/iv_risk_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/circle_bad" />

        <TextView
            android:id="@+id/tv_risk_level_nos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="clip_horizontal|center_vertical"
            android:text="3" />
    </FrameLayout>

</LinearLayout>